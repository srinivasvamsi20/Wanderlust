<% layout('layouts/boilerplate') -%>

<body>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <br /><br />
      <h3>Create a new Listing</h3>
      <br />
      <form
        action="/listings"
        method="post"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            type="text"
            name="listing[title]"
            placeholder="Enter Title"
            class="form-control"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Select a appropriate title!</div>
        </div>
        <br /><br />
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea
            name="listing[description]"
            placeholder="Enter Description"
            class="form-control"
            rows="5"
            required
          ></textarea>
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Select a appropriate Description!</div>
        </div>

        <br /><br />
        <div class="mb-3">
          <label for="image" class="form-label"> Upload Image</label>
          <input
            type="file"
            name="listing[image]"
            class="form-control"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Enter a appropriate image URL !</div>
        </div>
        
        <div class="row">
          <div class="mb-3 col-12">
            <label for="category" class="form-label" required>Category</label>
            <input
              type="text"
              name="listing[category]"
              placeholder="Mountains,Rooms"
              class="form-control"
              
            />
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Select a appropriate Price!</div>
          </div>

          <br /><br />
        <div class="row">
          <div class="mb-3 col-4">
            <label for="price" class="form-label" required>Price</label>
            <input
              type="text"
              name="listing[price]"
              placeholder="10,000"
              class="form-control"
              required
            />
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Select a appropriate Price!</div>
          </div>

          <br /><br />
          <div class="mb-3 col-8">
            <label for="country" class="form-label" required>Country</label>
            <input
              type="text"
              name="listing[country]"
              placeholder="IND"
              class="form-control"
              required
            />
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Select a appropriate Country!</div>
          </div>

          <br /><br />
        </div>

        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input
            type="text"
            name="listing[location]"
            placeholder="Gachibowli,Hyderabad"
            class="form-control"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Select a appropriate Location!</div>
        </div>

        <br /><br />
        <button class="btn btn-dark add-btn">Add</button>
        <br /><br />
      </form>
    </div>
  </div>
</body>
